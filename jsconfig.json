{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "paths": {
    "abi/*": [
      "./abi/*"
    ],
    "app/*": [
      "./app/*"
    ],
    "assets/*": [
      "./assets/*"
    ],
    "base/*": [
      "./base/*"
    ],
    "modules/*": [
      "./modules/*"
    ],
    "utils/*": [
      "./utils/*"
    ],
    "styles/*": [
      "./styles/*"
    ]
  }
}